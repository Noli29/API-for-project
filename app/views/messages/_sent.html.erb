<h4>Sent messages</h4>
<% if @messages.empty? %>
    You have not sent a single message
<% end %>
<% @messages.each do |m| %>
    <div class="row">
      <div class="large-10 columns">
        <%= link_to message_path(m) do%>
            <div>
              <% unless m.message_read? %><div class="unread"></div><% end %>
              To: <%= content_tag( :span, m.recipient.full_name, :class => "name") %><br>
              Subject: <%= content_tag( :span, m.subject, :class => "subject") %>
              <br/> <br/>
              <%= content_tag( :p, m.body) %><hr style="border-color: #000000;">
            </div>
        <% end %>
      </div>
    </div>
<% end %>
