<% provide(:title, @user.name) %>
<div class="row" >
  <aside class="span4">
    <section>
      <h1 style="font-size: 25px">
          <%= image_tag @user.avatar.url(:small) %>
        <hr align="left" style="
                background-color: #000000;
                width: 200px;
                height: 2px;">
          <%= @user.name %>
          <%= @user.surname %>
      </h1>
      <%= link_to 'post', new_post_path ,class: "btn btn-large btn-primary", style: "background: #000000;" %>
      <div style="position:absolute;top: 125px; left: 660px;">

      </div>

      <% if current_user.admin? %>
          <div style= "float:right;margin-right:30%;">
            <%= link_to 'Back', users_path, class: "btn btn-small btn-primary" %>
          </div>
      <% end %>




    </section>
  </aside>
</div>
<div style="margin: 50px 0;">

</div>